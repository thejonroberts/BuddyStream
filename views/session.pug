extends layout
block content
  #main
    h2 Buddy Stream Test
    #streamContainer
      iframe(width='560', height='315', src=`${session.streamUrl}`, frameborder='0', allowfullscreen='')
      canvas.canvas
    video#localVideo.player(autoplay='', muted='')
    video#remoteVideo.player(autoplay='')
    input#videoCallButton(type='button', onclick='start(true)', value='Video Call')
    input#endCallButton(type='button', disabled='', value='End Call')
  script(src='/public/lib/jquery/jquery.min.js')
  script(src='/public/lib/popper.js/popper.min.js')
  script(src='/public/lib/bootstrap/bootstrap.min.js')
  script(src='/public/app.js')
